<Window x:Class="HospitalManagementSystem.WPF.Views.Admin.AdminDashboardView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:adminVm="clr-namespace:HospitalManagementSystem.WPF.ViewModels.Admin"
        xmlns:adminViews="clr-namespace:HospitalManagementSystem.WPF.Views.Admin"
        Title="Admin Dashboard" Height="700" Width="1000">

    <Window.Resources>
        <Style x:Key="SidebarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#3F3F46"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0 8"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15 0"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#505055"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#606065"/>
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.98" ScaleY="0.98"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <DataTemplate DataType="{x:Type adminVm:HomeViewModel}">
            <adminViews:HomeView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type adminVm:StaffManagementViewModel}">
            <adminViews:StaffManagementView/>
        </DataTemplate>

    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0"
            Background="#2D2D30"
            BorderBrush="#3F3F46"
            BorderThickness="0,0,1,0">
            <StackPanel Margin="10">
                <TextBlock Text="Admin Dashboard"
                           Foreground="#E0E0E0"
                           FontSize="20"
                           FontWeight="Bold"
                           Margin="0 10 0 30"
                           HorizontalAlignment="Center"/>

                <Button Content="Home"
                        Style="{StaticResource SidebarButtonStyle}"
                        Command="{Binding ShowHomeCommand}"/>

                <Button Content="Staff Management"
                        Style="{StaticResource SidebarButtonStyle}"
                        Command="{Binding ShowStaffManagementCommand}"/>
            </StackPanel>
        </Border>

        <Border Grid.Column="1"
                Background="#F5F5F5"
                Padding="0,5,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Stretch" Margin="0,0,0,10">
                    <TextBlock Text="Welcome, Admin!" FontSize="16" VerticalAlignment="Center"/>
                    <Button Content="Logout" HorizontalAlignment="Right" Margin="10,0,0,0"
                            Command="{Binding LogoutCommand}"/>
                </StackPanel>

                <ContentControl Grid.Row="1" Content="{Binding CurrentViewModel}">
                    <ContentControl.Style>
                        <Style TargetType="ContentControl">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding CurrentViewModel}" Value="{x:Null}">
                                    <Setter Property="Content">
                                        <Setter.Value>
                                            <TextBlock Text="Select an option from the sidebar to manage hospital data."
                                                       VerticalAlignment="Center"
                                                       HorizontalAlignment="Center"
                                                       FontSize="18"
                                                       FontStyle="Italic"
                                                       Foreground="#606060"/>
                                        </Setter.Value>
                                    </Setter>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ContentControl.Style>
                </ContentControl>
            </Grid>
        </Border>
    </Grid>
</Window>