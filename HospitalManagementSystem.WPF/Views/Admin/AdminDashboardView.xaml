<Window x:Class="HospitalManagementSystem.WPF.Views.Admin.AdminDashboardView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:HospitalManagementSystem.WPF.ViewModels.Admin"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance vm:AdminDashboardViewModel}"
        Title="Admin Dashboard" Height="700" Width="1000">

    <Window.Resources>
        <Style x:Key="SidebarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#3F3F46"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0 8"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15 0"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#505055"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#606065"/>
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.98" ScaleY="0.98"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>


    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="#2D2D30" BorderBrush="#3F3F46" BorderThickness="0,0,1,0">
            <StackPanel Margin="10">
                <TextBlock Text="Admin Dashboard"
                           Foreground="#E0E0E0" FontSize="20" FontWeight="Bold" Margin="0 10 0 30"
                           HorizontalAlignment="Center"/>

                <Button Content="Staff Management" Style="{StaticResource SidebarButtonStyle}"/>
                <Button Content="Patient Management" Style="{StaticResource SidebarButtonStyle}"/>
                <Button Content="Appointments" Style="{StaticResource SidebarButtonStyle}"/>
                <Button Content="Billing" Style="{StaticResource SidebarButtonStyle}"/>
                <Button Content="Reports" Style="{StaticResource SidebarButtonStyle}"/>
            </StackPanel>
        </Border>

        <Border Grid.Column="1" Background="#F5F5F5" Padding="20">
            <TextBlock Text="Select an option from the sidebar to manage hospital data."
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       FontSize="18" FontStyle="Italic" Foreground="#606060"/>
        </Border>
    </Grid>
</Window>