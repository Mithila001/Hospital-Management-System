<Window x:Class="HospitalManagementSystem.WPF.Views.Admin.AdminDashboardView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:adminVm="clr-namespace:HospitalManagementSystem.WPF.ViewModels.Admin"
        xmlns:staffVm="clr-namespace:HospitalManagementSystem.WPF.ViewModels.Admin"
        xmlns:staffViews="clr-namespace:HospitalManagementSystem.WPF.Views"
        Title="Admin Dashboard" Height="700" Width="1000">

    <Window.Resources>
        <!-- 1) Your SidebarButtonStyle -->
        <Style x:Key="SidebarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#3F3F46"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0 8"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15 0"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                    CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#505055"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#606065"/>
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.98" ScaleY="0.98"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 2) Map StaffManagementViewModel → StaffManagementView -->
        <DataTemplate DataType="{x:Type staffVm:StaffManagementViewModel}">
            <staffViews:StaffManagementView/>
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Border Grid.Column="0"
            Background="#2D2D30"
            BorderBrush="#3F3F46"
            BorderThickness="0,0,1,0">
            <StackPanel Margin="10">
                <TextBlock Text="Admin Dashboard"
                   Foreground="#E0E0E0"
                   FontSize="20"
                   FontWeight="Bold"
                   Margin="0 10 0 30"
                   HorizontalAlignment="Center"/>

                <Button Content="Staff Management"
                Style="{StaticResource SidebarButtonStyle}"
                Command="{Binding ShowStaffManagementCommand}"/>
                <!-- other buttons here -->
            </StackPanel>
        </Border>

        <!-- Content Area -->
        <Border Grid.Column="1"
            Background="#F5F5F5"
            Padding="20">
            <ContentControl Content="{Binding CurrentViewModel}">
                <!-- Fallback when null -->
                <ContentControl.Style>
                    <Style TargetType="ContentControl">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding CurrentViewModel}" Value="{x:Null}">
                                <Setter Property="Content">
                                    <Setter.Value>
                                        <TextBlock Text="Select an option from the sidebar to manage hospital data."
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               FontSize="18"
                               FontStyle="Italic"
                               Foreground="#606060"/>
                                    </Setter.Value>
                                </Setter>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </ContentControl.Style>
            </ContentControl>
        </Border>
    </Grid>
</Window>
