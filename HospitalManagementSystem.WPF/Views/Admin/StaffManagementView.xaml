<UserControl x:Class="HospitalManagementSystem.WPF.Views.Admin.StaffManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vm="clr-namespace:HospitalManagementSystem.WPF.ViewModels.Admin"
             xmlns:userControls="clr-namespace:HospitalManagementSystem.WPF.Views.Admin.GeneralUserControls"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">

    <Grid Margin="2" Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header + Add Button -->
        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Staff Management" FontSize="20" FontWeight="Bold" VerticalAlignment="Center"/>
            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Add New Staff"
                Command="{Binding OpenAddNewStaffWindowCommand}"
                Margin="5,0"/>
            </StackPanel>
        </Grid>

        <!-- Tabs -->
        <TabControl Grid.Row="1">
            <!-- ALL STAFF -->
            <TabItem Header="All">
                <userControls:UC_SearchableDataGridView
                    ItemsSource="{Binding AllStaffView}"
                    Columns="{Binding AllStaffTableColumns}"
                    SearchQuery="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}"
                    SearchCommand="{Binding SearchCommand}"
                    SearchToolTip="{Binding SearchToolTip}"
                    FilterOptionsItemsSource="{Binding FilterOptionsItemsSource}"
                    SelectedFilterOption="{Binding SelectedFilterOption, UpdateSourceTrigger=PropertyChanged}"/>
            </TabItem>

            <!-- DOCTORS -->
            <TabItem Header="Doctors">
                <userControls:UC_SearchableDataGridView
                    ItemsSource="{Binding DoctorsView}"
                    Columns="{Binding DoctorsTableColumns}"
                    SearchQuery="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}"
                    SearchCommand="{Binding SearchCommand}"
                    SearchToolTip="{Binding SearchToolTip}" /> 
            </TabItem>

            <!-- NURSES -->
            <TabItem Header="Nurses">
                <userControls:UC_SearchableDataGridView
                    ItemsSource="{Binding NursesView}"
                    Columns="{Binding NursesTableColumns}"
                    SearchQuery="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}"
                    SearchCommand="{Binding SearchCommand}"
                    SearchToolTip="{Binding SearchToolTip}" />
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
