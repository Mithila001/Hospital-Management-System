<Window x:Class="HospitalManagementSystem.WPF.Views.Admin.ViewStaffMemberInfoView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HospitalManagementSystem.WPF.Views.Admin"
        xmlns:adminVm="clr-namespace:HospitalManagementSystem.WPF.ViewModels.Admin"
        mc:Ignorable="d"
        Title="{Binding Title}" Height="600" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Staff Member Details" FontSize="18" FontWeight="Bold" Margin="0,0,0,10" HorizontalAlignment="Center"/>

        <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock FontSize="16" Margin="5">
                <Run Text="Selected Staff Name: " FontWeight="SemiBold"/>
                <Run Text="{Binding SelectedStaffMember.FirstName}"/>
                <Run Text=" "/>
                <Run Text="{Binding SelectedStaffMember.LastName}"/>
            </TextBlock>
            <TextBlock FontSize="14" Margin="5" TextAlignment="Center">
                <Run Text="Username: " FontWeight="SemiBold"/>
                <Run Text="{Binding SelectedStaffMember.UserName}"/>
            </TextBlock>
        </StackPanel>

        <Button Grid.Row="2" Content="Close"
                Command="{Binding CloseWindowCommand}"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Width="80" Height="30" Margin="0,15,0,0"/>
    </Grid>
</Window>
