<UserControl x:Class="HospitalManagementSystem.WPF.Views.Admin.StaffRegister.UC_FinalPageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:HospitalManagementSystem.WPF.Views.Admin.StaffRegister"
             xmlns:vm="clr-namespace:HospitalManagementSystem.WPF.ViewModels.Admin.StaffRegister"
             mc:Ignorable="d"
             MinWidth="1280" MinHeight="720"
             d:DataContext="{d:DesignInstance Type=vm:FinalPageViewModel, IsDesignTimeCreatable=True}">
    <Grid Background="White">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Staff Registration Complete!"
                       FontSize="30"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,30"/>

            <TextBlock Text="Please note down the following credentials for the new staff member:"
                       FontSize="18"
                       HorizontalAlignment="Center"
                       TextWrapping="Wrap"
                       Margin="0,0,0,20"/>

            <StackPanel Orientation="Horizontal" Margin="0,10,0,5" HorizontalAlignment="Center">
                <TextBlock Text="Username: "
                           FontSize="20"
                           FontWeight="SemiBold"/>
                <TextBlock Text="{Binding UserName}"
                           FontSize="20"
                           Foreground="DarkBlue"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5,0,20" HorizontalAlignment="Center">
                <TextBlock Text="Password: "
                           FontSize="20"
                           FontWeight="SemiBold"/>
                <TextBlock Text="{Binding Password}"
                           FontSize="20"
                           Foreground="DarkBlue"/>
            </StackPanel>

            <TextBlock Text="These credentials can be used for logging into the system."
                       FontSize="16"
                       FontStyle="Italic"
                       HorizontalAlignment="Center"
                       Margin="0,20,0,0"/>
        </StackPanel>
    </Grid>
</UserControl>