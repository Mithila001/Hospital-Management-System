<UserControl x:Class="HospitalManagementSystem.WPF.Views.Admin.StaffRegister.UC_GeneralFormView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HospitalManagementSystem.WPF.Views.Admin.StaffRegister"
             xmlns:vm="clr-namespace:HospitalManagementSystem.WPF.ViewModels.Admin.StaffRegister"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance vm:GeneralFormViewModel}"
             MinWidth="1280" MinHeight="720">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>

                <ResourceDictionary Source="/HospitalManagementSystem.WPF;component/Resources/Modules/AdminModule/Admin_FormStyles.xaml"/>

            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
            <!-- Changed to * for scrollable content -->
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <Border Grid.Row="0" Style="{StaticResource BorderStyle1}">
            <TextBlock Text="General Staff Information"
                       FontSize="24"
                       FontWeight="Bold"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       Margin="20,0,0,0"/>
        </Border>

        <!-- Main Form Content Area -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <Grid x:Name="MainFormContentGrid" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="20">
                <!-- Removed Grid.IsSharedSizeScope="True" as it's no longer relevant for inner grid alignment -->
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- Role Selection -->
                    <RowDefinition Height="Auto"/>
                    <!-- Personal Identification -->
                    <RowDefinition Height="Auto"/>
                    <!-- Contact Information -->
                    <RowDefinition Height="Auto"/>
                    <!-- Address Information -->
                    <RowDefinition Height="Auto"/>
                    <!-- Employment Details -->
                    <RowDefinition Height="Auto"/>
                    <!-- Bank Details -->
                </Grid.RowDefinitions>

                <!-- Role Selection -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <!-- Label row -->
                        <RowDefinition Height="Auto"/>
                        <!-- Input row -->
                    </Grid.RowDefinitions>
                    <TextBlock Text="Role:" Grid.Row="0" Grid.Column="0"/>
                    <ComboBox ItemsSource="{Binding Roles}"
                              SelectedItem="{Binding SelectedRole, Mode=TwoWay}"
                              Grid.Row="1" Grid.Column="0"
                              HorizontalAlignment="Stretch"/>
                </Grid>

                <!-- Personal Identification Section -->
                <GroupBox Header="Personal Identification" Grid.Row="1" Style="{StaticResource GroupBoxStyle1}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <!-- Single column for labels/inputs -->
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="First Name:" Grid.Row="0" Grid.Column="0"/>
                        <TextBox Text="{Binding StaffData.FirstName,
                            Mode=TwoWay,
                            UpdateSourceTrigger=PropertyChanged,
                            ValidatesOnNotifyDataErrors=True,
                            NotifyOnValidationError=True}" Grid.Row="1" Grid.Column="0">
                           
                        </TextBox>

                        <TextBlock Text="Middle Name:" Grid.Row="2" Grid.Column="0"/>
                        <TextBox Text="{Binding MiddleName, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True, Mode=TwoWay}" Grid.Row="3" Grid.Column="0"/>

                        <TextBlock Text="Last Name:" Grid.Row="4" Grid.Column="0"/>
                        <TextBox Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged}" Grid.Row="5" Grid.Column="0"/>

                        <TextBlock Text="Date of Birth:" Grid.Row="6" Grid.Column="0"/>
                        <DatePicker SelectedDate="{Binding DOB, UpdateSourceTrigger=PropertyChanged}" Grid.Row="7" Grid.Column="0"/>

                        <TextBlock Text="Gender:" Grid.Row="8" Grid.Column="0"/>
                        <ComboBox ItemsSource="{Binding Genders}" SelectedItem="{Binding Gender, UpdateSourceTrigger=PropertyChanged}" Grid.Row="9" Grid.Column="0"/>

                        <TextBlock Text="Nationality:" Grid.Row="10" Grid.Column="0"/>
                        <TextBox Text="{Binding Nationality, UpdateSourceTrigger=PropertyChanged}" Grid.Row="11" Grid.Column="0"/>

                        <TextBlock Text="National ID Number:" Grid.Row="12" Grid.Column="0"/>
                        <TextBox Text="{Binding NationalIdNumber, UpdateSourceTrigger=PropertyChanged}" Grid.Row="13" Grid.Column="0"/>

                        <TextBlock Text="Marital Status:" Grid.Row="14" Grid.Column="0"/>
                        <ComboBox ItemsSource="{Binding MaritalStatuses}" SelectedItem="{Binding MaritalStatus, UpdateSourceTrigger=PropertyChanged}" Grid.Row="15" Grid.Column="0"/>

                        <TextBlock Text="Blood Group:" Grid.Row="16" Grid.Column="0"/>
                        <ComboBox ItemsSource="{Binding BloodGroups}" SelectedItem="{Binding BloodGroup, UpdateSourceTrigger=PropertyChanged}" Grid.Row="17" Grid.Column="0"/>
                    </Grid>
                </GroupBox>

                <!-- Contact Information Section -->
                <GroupBox Header="Contact Information" Grid.Row="2" Style="{StaticResource GroupBoxStyle1}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Primary Phone:" Grid.Row="0" Grid.Column="0"/>
                        <TextBox Text="{Binding PrimaryPhone, UpdateSourceTrigger=PropertyChanged}" Grid.Row="1" Grid.Column="0"/>

                        <TextBlock Text="Secondary Phone:" Grid.Row="2" Grid.Column="0"/>
                        <TextBox Text="{Binding SecondaryPhone, UpdateSourceTrigger=PropertyChanged}" Grid.Row="3" Grid.Column="0"/>

                        <TextBlock Text="Email:" Grid.Row="4" Grid.Column="0"/>
                        <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" Grid.Row="5" Grid.Column="0"/>

                        <TextBlock Text="Emergency Contact Name:" Grid.Row="6" Grid.Column="0"/>
                        <TextBox Text="{Binding EmergencyContactName, UpdateSourceTrigger=PropertyChanged}" Grid.Row="7" Grid.Column="0"/>

                        <TextBlock Text="Emergency Contact Relationship:" Grid.Row="8" Grid.Column="0"/>
                        <TextBox Text="{Binding EmergencyContactRelationship, UpdateSourceTrigger=PropertyChanged}" Grid.Row="9" Grid.Column="0"/>

                        <TextBlock Text="Emergency Contact Phone:" Grid.Row="10" Grid.Column="0"/>
                        <TextBox Text="{Binding EmergencyContactPhone, UpdateSourceTrigger=PropertyChanged}" Grid.Row="11" Grid.Column="0"/>
                    </Grid>
                </GroupBox>

                <!-- Address Information Section -->
                <GroupBox Header="Address Information" Grid.Row="3" Style="{StaticResource GroupBoxStyle1}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Address Line 1:" Grid.Row="0" Grid.Column="0"/>
                        <TextBox Text="{Binding AddressLine1, UpdateSourceTrigger=PropertyChanged}" Grid.Row="1" Grid.Column="0"/>

                        <TextBlock Text="Address Line 2:" Grid.Row="2" Grid.Column="0"/>
                        <TextBox Text="{Binding AddressLine2, UpdateSourceTrigger=PropertyChanged}" Grid.Row="3" Grid.Column="0"/>

                        <TextBlock Text="City:" Grid.Row="4" Grid.Column="0"/>
                        <TextBox Text="{Binding City, UpdateSourceTrigger=PropertyChanged}" Grid.Row="5" Grid.Column="0"/>

                        <TextBlock Text="State:" Grid.Row="6" Grid.Column="0"/>
                        <TextBox Text="{Binding State, UpdateSourceTrigger=PropertyChanged}" Grid.Row="7" Grid.Column="0"/>

                        <TextBlock Text="Postal Code:" Grid.Row="8" Grid.Column="0"/>
                        <TextBox Text="{Binding PostalCode, UpdateSourceTrigger=PropertyChanged}" Grid.Row="9" Grid.Column="0"/>

                        <TextBlock Text="Country:" Grid.Row="10" Grid.Column="0"/>
                        <TextBox Text="{Binding Country, UpdateSourceTrigger=PropertyChanged}" Grid.Row="11" Grid.Column="0"/>
                    </Grid>
                </GroupBox>

                <!-- Employment Details Section -->
                <GroupBox Header="Employment Details" Grid.Row="4" Style="{StaticResource GroupBoxStyle1}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Employee ID:" Grid.Row="0" Grid.Column="0"/>
                        <TextBox Text="{Binding EmployeeId, UpdateSourceTrigger=PropertyChanged}" Grid.Row="1" Grid.Column="0"/>

                        <TextBlock Text="Date of Hire:" Grid.Row="2" Grid.Column="0"/>
                        <DatePicker SelectedDate="{Binding DateOfHire, UpdateSourceTrigger=PropertyChanged}" Grid.Row="3" Grid.Column="0"/>

                        <TextBlock Text="Department:" Grid.Row="4" Grid.Column="0"/>
                        <TextBox Text="{Binding Department, UpdateSourceTrigger=PropertyChanged}" Grid.Row="5" Grid.Column="0"/>

                        <TextBlock Text="Job Title:" Grid.Row="6" Grid.Column="0"/>
                        <TextBox Text="{Binding JobTitle, UpdateSourceTrigger=PropertyChanged}" Grid.Row="7" Grid.Column="0"/>

                        <TextBlock Text="Employment Status:" Grid.Row="8" Grid.Column="0"/>
                        <ComboBox ItemsSource="{Binding EmploymentStatuses}" SelectedItem="{Binding EmploymentStatus, UpdateSourceTrigger=PropertyChanged}" Grid.Row="9" Grid.Column="0"/>

                        <TextBlock Text="Reporting Manager:" Grid.Row="10" Grid.Column="0"/>
                        <TextBox Text="{Binding ReportingManager, UpdateSourceTrigger=PropertyChanged}" Grid.Row="11" Grid.Column="0"/>
                    </Grid>
                </GroupBox>

                <!-- Bank Details Section -->
                <GroupBox Header="Bank Details" Grid.Row="5" Style="{StaticResource GroupBoxStyle1}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Bank Name:" Grid.Row="0" Grid.Column="0"/>
                        <TextBox Text="{Binding BankName, UpdateSourceTrigger=PropertyChanged}" Grid.Row="1" Grid.Column="0"/>

                        <TextBlock Text="Bank Account Number:" Grid.Row="2" Grid.Column="0"/>
                        <TextBox Text="{Binding BankAccountNumber, UpdateSourceTrigger=PropertyChanged}" Grid.Row="3" Grid.Column="0"/>

                        <TextBlock Text="Bank Swift Code:" Grid.Row="4" Grid.Column="0"/>
                        <TextBox Text="{Binding BankSwiftCode, UpdateSourceTrigger=PropertyChanged}" Grid.Row="5" Grid.Column="0"/>

                        <TextBlock Text="Bank Account Holder:" Grid.Row="6" Grid.Column="0"/>
                        <TextBox Text="{Binding BankAccountHolder, UpdateSourceTrigger=PropertyChanged}" Grid.Row="7" Grid.Column="0"/>
                    </Grid>
                </GroupBox>
            </Grid>
        </ScrollViewer>
    </Grid>
</UserControl>
