<UserControl x:Class="HospitalManagementSystem.WPF.Views.Admin.StaffRegister.UC_GeneralFormView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HospitalManagementSystem.WPF.Views.Admin.StaffRegister"
             mc:Ignorable="d" 
             xmlns:vm="clr-namespace:HospitalManagementSystem.WPF.ViewModels.Admin.StaffRegister"
             Width="1280"  Height="720">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Border Grid.Row="0" Style= "{StaticResource BorderStyle1}" >
            <TextBlock Text="General Staff Information"               
                   FontSize="24"
                   FontWeight="Bold"
                   Margin="0,0,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center"/>

        </Border>
        <!-- Main Form Grid: This grid holds all your form input fields and labels -->
        <Grid Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <!-- Column for labels, auto-sizes to label width -->
                <ColumnDefinition Width="*"/>
                <!-- Column for input fields, takes available space -->
                <ColumnDefinition Width="20"/>
                <!-- Spacer Column (unused in this single-column layout but good for potential future expansion) -->
                <ColumnDefinition Width="Auto"/>
                <!-- Additional Column for labels (if creating two-column form) -->
                <ColumnDefinition Width="*"/>
                <!-- Additional Column for input fields (if creating two-column form) -->
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Row for Role -->
                <RowDefinition Height="Auto"/>
                <!-- Row for First Name -->
                <RowDefinition Height="Auto"/>
                <!-- Row for Last Name -->
                <RowDefinition Height="Auto"/>
                <!-- Row for Date of Birth -->
                <RowDefinition Height="Auto"/>
                <!-- Row for Gender -->
                <RowDefinition Height="Auto"/>
                <!-- Row for Contact Number -->
                <RowDefinition Height="Auto"/>
                <!-- Row for Email -->
                <RowDefinition Height="*"/>
                <!-- Spacer row to push content to top if form is short -->
            </Grid.RowDefinitions>

            <!-- Role Selection -->
            <TextBlock Text="Role:" Grid.Row="0" Grid.Column="0"
                       VerticalAlignment="Center" Margin="0,8,10,8"/>
            <ComboBox ItemsSource="{Binding Roles}"
                      SelectedItem="{Binding SelectedRole}"
                      Grid.Row="0" Grid.Column="1"
                      HorizontalAlignment="Left" Width="250" Margin="0,8,0,8"/>

            <!-- First Name -->
            <TextBlock Text="First Name:" Grid.Row="1" Grid.Column="0"
                       VerticalAlignment="Center" Margin="0,8,10,8"/>
            <TextBox Text="{Binding FirstName, UpdateSourceTrigger=PropertyChanged}"
                     Grid.Row="1" Grid.Column="1" Margin="0,8,0,8"/>

            <!-- Last Name -->
            <TextBlock Text="Last Name:" Grid.Row="2" Grid.Column="0"
                       VerticalAlignment="Center" Margin="0,8,10,8"/>
            <TextBox Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged}"
                     Grid.Row="2" Grid.Column="1" Margin="0,8,0,8"/>

            <!-- Date of Birth -->
            <TextBlock Text="Date of Birth:" Grid.Row="3" Grid.Column="0"
                       VerticalAlignment="Center" Margin="0,8,10,8"/>
            <DatePicker SelectedDate="{Binding DOB}"
                        Grid.Row="3" Grid.Column="1" Margin="0,8,0,8"
                        HorizontalAlignment="Left" Width="200"/>

            <!-- Gender -->
            <TextBlock Text="Gender:" Grid.Row="4" Grid.Column="0"
                       VerticalAlignment="Center" Margin="0,8,10,8"/>
            <ComboBox ItemsSource="{Binding Genders}"
                      SelectedItem="{Binding SelectedGender}"
                      Grid.Row="4" Grid.Column="1"
                      HorizontalAlignment="Left" Width="150" Margin="0,8,0,8"/>

            <!-- Contact Number -->
            <TextBlock Text="Contact No:" Grid.Row="5" Grid.Column="0"
                       VerticalAlignment="Center" Margin="0,8,10,8"/>
            <TextBox Text="{Binding ContactNo, UpdateSourceTrigger=PropertyChanged}"
                     Grid.Row="5" Grid.Column="1" Margin="0,8,0,8"/>

            <!-- Email Address -->
            <TextBlock Text="Email:" Grid.Row="6" Grid.Column="0"
                       VerticalAlignment="Center" Margin="0,8,10,8"/>
            <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
                     Grid.Row="6" Grid.Column="1" Margin="0,8,0,8"/>

        </Grid>

    </Grid>

</UserControl>
