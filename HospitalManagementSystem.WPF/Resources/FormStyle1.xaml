<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Define common styles for TextBoxes, DatePickers, ComboBoxes -->
    <Style TargetType="TextBox">
        <Setter Property="Margin" Value="0,4,0,8"/>
        <!-- Reduced top margin for tighter packing -->
        <Setter Property="Padding" Value="5"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <!-- Removed fixed Width to allow stretching within columns -->
    </Style>
    <Style TargetType="DatePicker">
        <Setter Property="Margin" Value="0,4,0,8"/>
        <!-- Reduced top margin for tighter packing -->
        <Setter Property="Padding" Value="5"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <!-- Removed fixed Width to allow stretching within columns -->
    </Style>
    <Style TargetType="ComboBox">
        <Setter Property="Margin" Value="0,4,0,8"/>
        <!-- Reduced top margin for tighter packing -->
        <Setter Property="Padding" Value="5"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <!-- Removed fixed Width to allow stretching within columns -->
    </Style>
    <Style TargetType="TextBlock">
        <Setter Property="VerticalAlignment" Value="Bottom"/>
        <!-- Aligned to bottom to sit just above input -->
        <Setter Property="Margin" Value="0,8,0,4"/>
        <!-- Adjusted margin to sit above input -->
        <Setter Property="FontWeight" Value="SemiBold"/>
        <!-- Added a bit of weight for labels -->
    </Style>
    <Style x:Key="BorderStyle1" TargetType="Border">
        <Setter Property="Background" Value="#F0F0F0"/>
        <Setter Property="Padding" Value="20"/>
        <Setter Property="BorderBrush" Value="#D0D0D0"/>
        <Setter Property="BorderThickness" Value="0,0,0,1"/>
    </Style>
    <Style x:Key="GroupBoxStyle1" TargetType="GroupBox">
        <Setter Property="Margin" Value="0,15,0,15"/>
        <Setter Property="Padding" Value="10"/>
        <Setter Property="BorderBrush" Value="#E0E0E0"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="HeaderTemplate">
            <Setter.Value>
                <DataTemplate>
                    <TextBlock Text="{Binding}" FontWeight="Bold" FontSize="16" Foreground="#333333"/>
                </DataTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>